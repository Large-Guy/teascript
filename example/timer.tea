class Timer
{
    new(time)
    {
        self.total = time
        self.left = 0
    }

    start()
    {
        self.left = self.total
    }

    step(delta)
    {
        self.left -= delta
    }

    isover()
    {
        return self.left < 0
    }
}

const timer = Timer.new(15)
timer.start()

while
{
    print(timer.left)
    timer.step(1)

    if timer.isover()
    {
        break
    }
}
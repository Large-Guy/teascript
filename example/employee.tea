class Person 
{
    new(name) 
    {
        self.name = name
        self.eyes = 2
        self.mouth = 1
    }

    sleep() 
    {
        return 'slept'
    }
}

var p1 = Person.new("john")
print(p1.name)  // "john"
print(p1.sleep())   // "slept"

class Employee : Person
{
    new(name, salary)
    {
        super(name)
        self.salary = salary
    }
}

var e1 = Employee.new("smith", 300000)
print(e1.name)  // "smith"
print(e1.eyes)  // 2
print(e1.salary)    // 300000
print(e1.sleep())   // "slept"